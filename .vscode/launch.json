{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debugger (run_class_finetuning)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/videomamba/video_sm/run_class_finetuning.py",
      "console": "integratedTerminal",
      "args": [
        "--model=videomamba_middle",
        "--finetune=${workspaceFolder}/val_base/videomamba_t16_k400_f8_res224.pth",
        "--data_path=${workspaceFolder}/rsu/data/kinetics-dataset/k400/annotations",
        "--prefix=${workspaceFolder}/rsu/data/kinetics-dataset/k400/val",
        "--data_set=Kinetics_sparse",
        "--split=,",
        "--nb_classes=400",
        "--log_dir=${workspaceFolder}/out",  
        "--output_dir=${workspaceFolder}/out",
        "--batch_size=32",
        "--num_sample=2",
        "--input_size=224",
        "--short_side_size=224",
        "--save_ckpt_freq=100",
        "--num_frames=8",
        "--num_workers=12",
        "--warmup_epochs=5",
        "--tubelet_size=1",
        "--epochs=45",
        "--lr=1e-4",
        "--layer_decay=0.8",
        "--drop_path=0.4",
        "--opt=adamw",
        "--opt_betas", "0.9", "0.999",
        "--weight_decay=0.05",
        "--test_num_segment=4",
        "--test_num_crop=3",
        "--dist_eval",
        "--test_best",
        "--bf16"
      ]
      // "args": "${command:pickArgs}"
    }
  ]
}